config interface 'loopback'
	option device 'lo'
	option proto 'static'
	option ipaddr '127.0.0.1'
	option netmask '255.0.0.0'

config globals 'globals'
	option ula_prefix 'fd85:bc18:9a9d::/48'
	option packet_steering '1'

config device
	option type 'bridge'
	option name 'bridge'
	option stp '1'
	option igmp_snooping '1'
	option ipv6 '0'
	list ports 'bat0'
	list ports 'lan1'
	list ports 'lan2'
	list ports 'lan3'
	list ports 'wan'

config bridge-vlan
	option device 'bridge'
	option vlan '1'
	list ports 'wan:t'

